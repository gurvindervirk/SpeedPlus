<!DOCTYPE html>
<html lang="en">
<head>
    <title>eZee Ver. 11.1</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link href="~/Content/myStyle.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/tablePagging.js"></script>
    <script src="~/Scripts/EditableTable.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-secondary navbar-dark">
        <!-- Brand -->
        <a class="navbar-brand" href="#">
            eZee Ver. 11.1
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Links -->
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">Home</a>
                </li>
            </ul>
            <!-- Dropdown Master Setup -->

            @if (User.Identity.IsAuthenticated)
            {
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardropmaster" data-toggle="dropdown">
                        Setup
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Company/Index">Company Info</a>
                        <a class="dropdown-item" href="/CompanyBook/Index">Auction Books</a>
                        <a class="dropdown-item" href="/Vegetable/Index">Inventories</a>
                        <a class="dropdown-item" href="/CrateModels/Index">Inventories Crates</a>
                        <a class="dropdown-item" href="/Area/Index">Collections Units</a>
                    </div>
                </li>
                
              @if (User.IsInRole("ADMIN"))
              {
                <!-- Dropdown Super Admin -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Admin Dashboard
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/SecurityLoginRole/Index">Users</a>
                    </div>
                </li>
              }

                <!-- Dropdown Transactions -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Transactions
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Account/Index">Accounts</a>
                        <a class="dropdown-item" href="/Home/About">Incomings</a>
                        <a class="dropdown-item" href="/Home/About">Sales</a>
                        <a class="dropdown-item" href="/Home/About">Purchases</a>
                        <a class="dropdown-item" href="/Home/About">Receipts</a>
                        <a class="dropdown-item" href="/Home/About">Payments</a>
                    </div>
                </li>

                <!-- Dropdown Reports -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Reports
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Home/About">Ledgers</a>
                        <a class="dropdown-item" href="/Home/About">Outstandings</a>
                        <a class="dropdown-item" href="/Home/About">Sales</a>
                        <a class="dropdown-item" href="/Home/About">Purchases</a>
                        <a class="dropdown-item" href="/Home/About">Taxes</a>
                        <a class="dropdown-item" href="/Home/About">Consolidated</a>
                        <a class="dropdown-item" href="/Home/About">Misc</a>

                    </div>
                </li>
            </ul>
            
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href=""><span class="glyphicon glyphicon-log-in"></span>Hello @User.Identity.Name</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/SecurityLogin/Logout"><span class="glyphicon glyphicon-log-in"></span> LogOut</a></li>
                </ul>
                
            }
            else
            {
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" href="/SecurityLogin/Add"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li class="nav-item"><a class="nav-link" href="/SecurityLogin/LoginForm"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
            }
        </div>
    </nav>
    <br>

    <div class="container body-content">

        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Copyright @@Gurvinder Singh</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="/Scripts/bootstrap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>