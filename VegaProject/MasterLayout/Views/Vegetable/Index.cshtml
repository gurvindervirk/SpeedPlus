@model IEnumerable<VegaModel.VegetableModel>

@{
    ViewBag.Title = "Inventories List";
}
<div>
    <a href='@Url.Action("Add", "Vegetable")' class="btn btn-info btn-rounded btn-sm">
        Add<i class="fas fa-plus-square ml-1"></i>
    </a>
    </div>
<div class="container border">
    <br />
    <div class="table-responsive">
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">
                        @Html.DisplayName("INVENTORY")
                    </th>
                    <th class="th-sm">
                        @Html.DisplayName("COMMISSION")
                    </th>
                    <th class="th-sm">
                        @Html.DisplayName("LABOUR CHARGES")
                    </th>
                    <th class=" th-sm">
                        @Html.DisplayName("RDF-FEES")
                    </th>
                    <th class="th-sm">
                        @Html.DisplayName("MDF-FEES")
                    </th>
                    <th class="th-sm">
                        @Html.DisplayName("WRAPPING CHARGES")
                    </th>
                    <th class=" th-sm">
                        @Html.DisplayName("IN CONTAINER")
                    </th>
                  
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vegetable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Arhat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Laga)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RDF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MDF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bardana)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Crate)
                    </td>
                    <td>

                        <a href='@Url.Action("Edit", "Vegetable",new { id = item.Id  })' class="btn btn-info btn-rounded btn-sm buttonEdit">Edit<i class="fas fa-pencil-square-o ml-1"></i></a>
                        <a href='@Url.Action("DeleteLogin", "Vegetable",new { id = item.Id  })' class="btn btn-danger btn-sm btn-rounded buttonDelete">Delete<i class="fas fa-times ml-1"></i></a>
                    </td>
                </tr>
            }
        </table>
        </div>
    </div>
    <br />

    @section Scripts{

    }

